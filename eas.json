{
  "build": {
    "preview": {
      "android": {
        "buildType": "apk",
        "image": "latest",
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "ANDROID_COMPILE_SDK_VERSION": "34",
          "ANDROID_TARGET_SDK_VERSION": "34"
        }
      },
      "hooks": {
        "preBuild": ".eas-hooks/pre-build.js"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true,
        "image": "ubuntu-22.04-jdk-17-ndk-r25b",
        "gradleCommand": ":app:bundleRelease",
        "env": {
          "ANDROID_COMPILE_SDK_VERSION": "34",
          "ANDROID_TARGET_SDK_VERSION": "34",
          "GRADLE_OPTS": "-Dorg.gradle.jvmargs='-Xmx2048m -XX:MaxMetaspaceSize=512m'"
        }
      },
      "hooks": {
        "preBuild": ".eas-hooks/pre-build.js"
      }
    }
  },
  "cli": {
    "appVersionSource": "remote",
    "version": "^15.0.0"
  }
}
