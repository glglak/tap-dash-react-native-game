{
  "build": {
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "withoutCredentials": true
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "googleplay": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "GRADLE_OPTS": "-Dorg.gradle.project.kotlinVersion=1.8.10"
      },
      "prebuildCommand": "npm run postinstall && echo 'distributionUrl=https\\://services.gradle.org/distributions/gradle-8.3-all.zip' > ./android/gradle/wrapper/gradle-wrapper.properties"
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "internal"
      }
    }
  },
  "cli": {
    "version": ">= 3.13.0",
    "requireCommit": false,
    "promptToConfigurePushNotifications": false
  }
}
