{
  "build": {
    "preview": {
      "android": {
        "buildType": "apk",
        "distribution": "internal",
        "env": {
          "ANDROID_COMPILE_SDK_VERSION": "34",
          "ANDROID_TARGET_SDK_VERSION": "34",
          "GRADLE_OPTS": "-Dorg.gradle.jvmargs='-Xmx2048m -XX:MaxMetaspaceSize=512m' -Dorg.gradle.configuration-cache=false"
        },
        "prebuildCommand": "chmod +x ./fix-gradle-plugin.sh && ./fix-gradle-plugin.sh"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true,
        "env": {
          "ANDROID_COMPILE_SDK_VERSION": "34",
          "ANDROID_TARGET_SDK_VERSION": "34",
          "GRADLE_OPTS": "-Dorg.gradle.jvmargs='-Xmx2048m -XX:MaxMetaspaceSize=512m' -Dorg.gradle.configuration-cache=false"
        },
        "prebuildCommand": "chmod +x ./fix-gradle-plugin.sh && ./fix-gradle-plugin.sh"
      }
    }
  },
  "cli": {
    "appVersionSource": "remote",
    "version": "^15.0.0"
  }
}
